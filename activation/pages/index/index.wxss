#pages {
  padding: 40rpx;
}

#title {
  text-align: center;
  /* border: 1px solid red; */
  height: 155rpx;
  line-height: 155rpx;
}

#honorific {
  margin: 30rpx 0 30rpx 0;
  text-align: left;
}

#honorific .text {
  font-size: 30rpx;
  color: #dd4822;
}

#content {
  font-size: 27rpx;
  text-indent: 58rpx;
}

.btn2 {
  width: 200rpx;
  height: 200rpx;
  margin-top: 20rpx;
  background-color: white;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  /* border: .5rpx solid #999; */
  border-radius: 15px;
  box-shadow: -5rpx 9rpx #999;
}
.btn2::after {
  border: 0;
}
.btn2:active {
  box-shadow: -2rpx 5rpx #666;
  transform: translateY(4px);
}
.search_content{
  margin: 50rpx 0 20rpx 0;
}
.search_content .text{
  font-size: 25rpx;
  color: #dd4822;
  margin-bottom: 20rpx;
}
.search{
  border: 1rpx solid #999;
  border-radius: 25rpx;
  height: 80rpx;
  text-indent: 25rpx;
}
.btn1{
  display: block;
  margin: 20rpx 0 0 0;
}
